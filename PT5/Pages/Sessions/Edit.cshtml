@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit @Model.Session.Name</h2>
<hr />
<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Session.SessionID" />
            <div class="form-group">
                <label asp-for="Session.Name" class="control-label"></label>
                <input asp-for="Session.Name" class="form-control" placeholder="Ex: Quickbooks Overview" />
                <span asp-validation-for="Session.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.Description" class="control-label"></label>
                <input asp-for="Session.Description" class="form-control" placeholder="Ex: A general overview of the basic operations of Quickbooks" />
                <span asp-validation-for="Session.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.StartDate" class="control-label"></label>
                <input asp-for="Session.StartDate" class="form-control" placeholder="Ex: 1/1/2020" />
                <span asp-validation-for="Session.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.EndDate" class="control-label"></label>
                <input asp-for="Session.EndDate" class="form-control" placeholder="Ex: 1/8/2020" />
                <span asp-validation-for="Session.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}