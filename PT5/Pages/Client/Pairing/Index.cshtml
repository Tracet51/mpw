<div class="card-deck">
    @foreach (var item in Model.Display)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><a asp-page="../Course/List" asp-route-id="@item.PairID">@Html.DisplayFor(modelItem => item.JoinCode)</a></h5>
                <p class="card-text">Date Created: @Html.DisplayFor(modelItem => item.DateCreated)</p>
                @if (item.ProtegeUserName != null)
                {
                    <p class="card-link">Protege: <a asp-page="/PublicProfiles/ProtegePublicProfile" asp-route-protegeUsername="@item.ProtegeUserName">@item.ProtegeUserName</a></p>
                }
                @if (item.MentorUserName != null)
                {
                    <p class="card-text">Mentor: <a asp-page="/PublicProfiles/MentorPublicProfile" asp-route-MentorUsername="@item.MentorUserName">@item.MentorUserName</a></p>
                }
            </div>
        </div>
    }
</div>
