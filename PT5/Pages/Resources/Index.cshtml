@page
@model MPW.Pages.Resources.IndexModel

@{
    ViewData["Title"] = "Index";
    int i = 0;
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Resource[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resource[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resource[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resource[0].DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resource[0].Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resource[0].Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Resource) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse_@i">@Html.DisplayFor(modelItem => item.Link)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseID)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.ResourceID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ResourceID">Delete</a>
            </td>
        </tr>
    i++;
}
    </tbody>
</table>
