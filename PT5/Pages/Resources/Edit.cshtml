            </div>
            <div class="form-group">
                <label asp-for="Resource.DateAdded" class="control-label"></label>
                <input asp-for="Resource.DateAdded" class="form-control" />
                <span asp-validation-for="Resource.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resource.Link" class="control-label"></label>
                <input asp-for="Resource.Link" class="form-control" />
                <span asp-validation-for="Resource.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resource.CourseID" class="control-label"></label>
                <select asp-for="Resource.CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
                <span asp-validation-for="Resource.CourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-default" />
