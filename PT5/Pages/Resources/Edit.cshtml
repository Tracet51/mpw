<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Resource.ResourceID" />
            <div class="form-group">
                <label asp-for="Resource.Name" class="control-label"></label>
                <input asp-for="Resource.Name" class="form-control" />
                <span asp-validation-for="Resource.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resource.Category" class="control-label"></label>
                <input asp-for="Resource.Category" class="form-control" />
                <span asp-validation-for="Resource.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resource.Type" class="control-label"></label>
                <input asp-for="Resource.Type" class="form-control" />
