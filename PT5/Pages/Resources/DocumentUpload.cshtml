@page
@model MPW.Pages.Resources.DocumentUploadModel

@{
    ViewData["Title"] = "UploadDocument";
}

<h2>UploadDocument</h2>

<h4>Resource</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="courseID" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required="required"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.Category" class="control-label"></label>
                <input asp-for="FileUpload.Category" class="form-control" required="required"/>
                <span asp-validation-for="FileUpload.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.Document" class="control-label"></label>
                <input asp-for="FileUpload.Document" class="form-control" required="required"/>
                <span asp-validation-for="FileUpload.Document" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
