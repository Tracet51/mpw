@page
@model DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Agenda.Name</h2>

<div>
    <hr />
    <div class="row">
        <div class=" col-md-8">
            <dl class="dl-horizontal">
                <dt>
                    Agenda Name
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Agenda.Name)
                </dd>
                <dt>
                    Created On
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Agenda.CreationDate)
                </dd>
                @if (Model.Agenda?.Document != null)
                {
                    <dt>
                        Document Name
                    </dt>
                    <dd>
                        <a asp-page-handler="Document" asp-route-id="@Model.Agenda.AgendaID">@Model.Agenda.Document.Name</a>
                    </dd>
                }
            </dl>
            @if (Model.IsProtege || Model.IsMentor)
            {
            <form method="post" asp-page-handler="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Agenda.AgendaID" />
                <input type="hidden" asp-for="Agenda.SessionID" />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Delete Agenda" class="btn btn-danger" />
                    </div>
                </div>
            </form>
            }

        </div>
    </div>

</div>
