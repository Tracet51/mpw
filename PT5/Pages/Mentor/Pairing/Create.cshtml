@page
@model MPW.Pages.Mentor.Pairing.CreateModel
@{
    ViewData["Title"] = "Create";
}
<h2>Invite your Protege and Client to Join Esolvit's Mentor Protege Program</h2>
<p>To create a match you need to invite your Protege and Client so they can use the website like you!</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ProtegeEmailAddress" class="control-label"></label>
                <input asp-for="Input.ProtegeEmailAddress" class="form-control" />
                <span asp-validation-for="Input.ProtegeEmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ClientEmailAddress" class="control-label"></label>
                <input asp-for="Input.ClientEmailAddress" class="form-control" />
                <span asp-validation-for="Input.ClientEmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Invite" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}