@page
@model MPW.Pages.Mentor.ProfileBuilder.AddressModel

@{
    ViewData["Title"] = "Address";
}

<h2>Address</h2>

<h4>Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AddressMentor.StreetAddress" class="control-label"></label>
                <input asp-for="AddressMentor.StreetAddress" class="form-control" />
                <span asp-validation-for="AddressMentor.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressMentor.StreetAddress2" class="control-label"></label>
                <input asp-for="AddressMentor.StreetAddress2" class="form-control" />
                <span asp-validation-for="AddressMentor.StreetAddress2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressMentor.City" class="control-label"></label>
                <input asp-for="AddressMentor.City" class="form-control" />
                <span asp-validation-for="AddressMentor.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressMentor.State" class="control-label"></label>
                <input asp-for="AddressMentor.State" class="form-control" />
                <span asp-validation-for="AddressMentor.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressMentor.ZipCode" class="control-label"></label>
                <input asp-for="AddressMentor.ZipCode" class="form-control" />
                <span asp-validation-for="AddressMentor.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
