@page
@model MPW.Pages.Objectives.ListModel

@{
    ViewData["Title"] = "List";
}

<h2>List of @Model.Course.CourseName's Objectives</h2>

<p>
    <a asp-page="Create" asp-route-courseID="@Model.Course.CourseID">Create New Objective</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Objective[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objective[0].Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objective[0].DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objective[0].DateCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objective[0].Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Objective) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
