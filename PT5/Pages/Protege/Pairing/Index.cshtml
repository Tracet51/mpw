<div class="card-deck">
    @foreach (var item in Model.Display)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><a asp-page="../Course/List" asp-route-pairID="@item.PairID">@Html.DisplayFor(modelItem => item.JoinCode)</a></h5>
                <p class="card-text">Date Created: @Html.DisplayFor(modelItem => item.DateCreated)</p>
                @if (item.MentorUserName != null)
                {
                    <p class="card-text">Mentor: <a asp-page="/PublicProfiles/MentorPublicProfile" asp-route-mentorUsername="@item.MentorUserName">@item.MentorUserName</a></p>
                }
                @if (item.ClientUserName != null)
                {
                    <p class="card-text">Client: <a asp-page="/PublicProfiles/ClientPublicProfile" asp-route-clientUsername="@item.ClientUserName">@item.ClientUserName</a></p>
                }
            </div>
        </div>
    }
</div>

